<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:background="@drawable/bcard_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="apps101.example.CardFragment" >

    <TextView
        android:id="@+id/person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/sample_name"
        android:textColor="#FFFFFF"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/person_name"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:text="@string/sample_business"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TableRow
        android:id="@+id/email_website_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <TextView
            android:id="@+id/person_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sample_email"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/person_website"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sample_website"
            android:textColor="#FFFFFF" />
    </TableRow>

    <TableRow
        android:id="@+id/address_number_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/email_website_container" >

        <TextView
            android:id="@+id/person_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sample_address"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/person_citystate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sample_citystate"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/person_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sample_number"
            android:textColor="#FFFFFF" />
    </TableRow>

</RelativeLayout><!-- From: file:/home/arjun/AndroidStudioProjects/CardSwap-NFC/app/src/main/res/layout/fragment_card.xml -->