<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food_1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProjectX">

    <TextView
        android:id="@+id/to_do"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Would you like to..."
        android:textColor="#0f0f0f"
        android:textSize="26sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/dine_in"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/to_do"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_sample"
        android:text="Dine In"
        android:onClick="dineIn"
        android:textStyle="bold" />

    <Button
        android:id="@+id/delivery"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dine_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_sample"
        android:text="Home Delivery"
        android:textStyle="bold" />

</RelativeLayout>
