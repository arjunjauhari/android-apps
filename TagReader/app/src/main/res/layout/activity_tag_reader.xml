<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TagReader">

    <TextView
        android:id="@+id/tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Tag says: "
        android:textSize="33sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tag_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="ID"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/ssid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag_id"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="SSID"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ssid"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Pass"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/properties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/prop1"
        android:paddingTop="10dp"
        android:text="Tag properties: "
        android:textSize="33sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@id/prop1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/prop2"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Sample"
        android:textSize="22sp" />

    <TextView
        android:id="@id/prop2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/prop3"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Sample"
        android:textSize="22sp" />

    <TextView
        android:id="@id/prop3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/prop4"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Sample"
        android:textSize="22sp" />

    <TextView
        android:id="@id/prop4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:text="Sample"
        android:textSize="22sp" />

</RelativeLayout>
